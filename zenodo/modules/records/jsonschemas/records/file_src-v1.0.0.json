{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://zenodo.org/schemas/records/file-v1.0.0.json",
  "title": "Zenodo Files Schema v1.0.0",
  "type": "object",
  "properties": {
    "_bucket": {
      "description": "Bucket ID for record.",
      "type": "string"
    },
    "_files": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "https://zenodo.org/schemas/records-files/records-files-v1.0.0.json"
          },
          {
            "type": "object",
            "properties": {
              "previewer": {
                "description": "Identifier for previewer needed to preview this file.",
                "type": "string"
              },
              "type": {
                "description": "File type extension.",
                "type": "string"
              }
            }
          }
        ]
      }
    }
  }
}
